@model PProject.Models.ListViewModel<PProject.Models.Residences.BuildingViewModel>
@{
    ViewBag.Title = "Buildings";
}

<h2>Buildings</h2>

<div id="tableContainer" class="container">
    <table id="buildingsTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th scope="col">Building ID</th>
            <th scope="col">Address</th>
            @*Iterate each element in model for given row in table.*@
        </tr>
        </thead>
        <tbody>
        @if (Model?.Items?.Count > 0)
        {
            foreach (var building in Model.Items)
            {
                <tr>
                    <td>@building.id_budynku</td>
                    <td>@building.adres_budynku</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" style="text-align: center">No items to display.</td>
            </tr>
        }

        </tbody>
    </table>
</div>

<script>
    ///Initializes the table.
    $(document).ready(function () {
        var table = $('#buildingsTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>