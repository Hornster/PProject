@model PProject.Models.Residences.BuildingListViewModel
@{
    ViewBag.Title = "Building Details";
}
<div id="header" class="container" style="width:100%">
    <h2>Building Details</h2>
    <a href="@Url.Action("EditResidence", "Residences")?buildingId=@Model.BuildingId"><i class="fas fa-plus fa-5x hoverable green-text"></i></a>
</div>
<div id="tableContainer" class="container">
    <table id="residencesTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr> @*Options*@
            <th scope="col" class="col-sm-1"></th>
            <th scope="col" class="col-1">Residence ID</th>
            <th scope="col" class="col-1">Number</th>
            <th scope="col" class="col-1">Surface</th>
            <th scope="col" class="col-7">Description</th>
            <th scope="col" class="col-sm-1"></th>
            @*Iterate each element in model for given row in table.*@
        </tr>
        </thead>
        <tbody>
        @if (Model?.Items?.Count > 0)
        {
            foreach (var residence in Model.Items)
            {
            <tr>
                <td><a href="@Url.Action("EditResidence", "Residences")?buildingId=@residence.id_budynku, @residence.id_mieszkania"><i class="fas fa-edit hoverable"></i></a></td>
                <td><i class="fas fa-dumpster hoverable red-text" onclick="deleteRecord(@residence.id_budynku, @residence.id_mieszkania)"></i></td>
                <td>@residence.id_mieszkania</td>
                <td>@residence.numer</td>
                <td>@residence.metraz</td>
                <td>@residence.opis</td>

            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" style="text-align: center">No items to display.</td>
            </tr>
        }

        </tbody>
    </table>
</div>

<script>
    ///Initializes the table.
    $(document).ready(function () {
        var table = $('#residencesTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
    //Removes given residence from building.
    function deleteRecord(buildingId, residenceId) {
        $.post("@Url.Action("DeleteResidence", "Residences")",
            {
                buildingId: buildingId,
                residenceId: residenceId
            });
    }
</script>