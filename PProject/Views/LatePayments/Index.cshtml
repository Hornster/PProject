@model PProject.Models.ListViewModel<DB.Model.Interfaces.ILatePaymentModel>
@{
    ViewBag.Title = "Late Payments";
}

<div id="header" class="container" style="width:100%">
    <h2>Late Payments</h2>
</div>


<div id="tableContainer" class="container">
    <table id="latePaymentsTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th scope="col">Amount</th>
            <th scope="col">Name</th>
            <th scope="col">Mobile</th>
            <th scope="col">Address</th>
            @*Iterate each element in model for given row in table.*@
        </tr>
        </thead>
        <tbody>
        @if (Model?.Items?.Count > 0)
        {
            foreach (var latePayment in Model.Items)
             {
            <tr>
                <td>@latePayment.Amount</td>
                <td>@latePayment.Name</td>
                <td>@latePayment.Mobile</td>
                <td>@latePayment.Address</td>
            </tr>
             }
        }
        else
        {
            <tr>
                <td colspan="6" style="text-align: center">No items to display.</td>
            </tr>
        }

        </tbody>
    </table>
</div>



<script>
    ///Initializes the table.
    $(document).ready(function () {
        var table = $('#latePaymentsTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>